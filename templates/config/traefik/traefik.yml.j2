log:
  level: INFO

providers:
  docker:
    network: traefik
    exposedByDefault: false

global:
  sendAnonymousUsage: false

api:
  dashboard: true

entryPoints:
  openvpn:
    address: :1194

  web:
    address: :80
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https

  websecure:
    address: :443

certificatesResolvers:
  letsencrypt:
    acme:
      email: {{ traefik_letsencrypt_email }}
      storage: /letsencrypt/acme.json
      tlschallenge: true
